/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.game{
	width:100%;
	height:100vh;
	position: relative;
}
.game image{
	width:100%;
	height:100%;
}
.mask{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.4)
}
.dialog{
	width:100%;
	height:100%;
	position:relative;
	left:0;
	top:0;
}
.dialog_cont{
	width:600rpx;
	height:200rpx;
	background:#ca0034;
	margin:0 auto;
}
.dialog_cont image{
	width:50rpx;
	height:50rpx;
}
.close{
	width:94%;
	height:86rpx;
	line-height:86rpx;
	padding:0 3%;
	text-align:right;
}
.game_cont{
	width:64%;
	height:726rpx;
	position:absolute;
	left:18%;
	top:32%;
}
.game_cont image{
	width:480rpx;
	height:726rpx;
}
.game_box{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
}
.game_tlt{
	width:100%;
	height:122rpx;
	line-height:122rpx;
	text-align: center;
}
.game_tlt text{
	margin:0 10rpx;
}
.maskOne{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.4)
}
.game_reward{
	width:100%;
	position:absolute;
	top:30%;
}
.game_reward_tlt{
	text-align: center;
	position:relative;
	width:600rpx;
	height:100rpx;
	background:#ca0034;
	line-height:100rpx;
	border-radius:16rpx;
	margin:0 auto;
}
.game_reward_tlt text{
	color:#ffd700;
}
.closeOne{
	position: absolute;
	top:20rpx;
	right:30rpx;
}
.closeOne image{
	width:50rpx;
	height:50rpx;
}
.game_reward_cont{
	text-align: center;
	height:560rpx;
	line-height:560rpx;
}
.submit_info{
	width:600rpx;
	border-radius:10rpx;
	margin:0 auto;
}
.game_box{
	transition:all 1s;
}
.move_active{
	animation:silde 0.2s  forwards;
    -webkit-animation:silde 0.2s  forwards;
}

@keyframes silde{
	0%{
		transform:translateY(0%);
		-webkit-transform:translateY(0%);
		 opacity:1;
	}
	100%{
		transform:translateY(-100%);
		-webkit-transform:translateY(-100%);
		opacity:0;
	}
}
.game_tlt{
	position: absolute;
	top:40rpx;
	width:100%;
	text-align: center;
}