/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
page{
	background:#f4f4f4;
}
.position{
	height:68rpx;
} 
.position_left{
	width:70%;
}
.position_left image{
	width:22rpx;
	height:28rpx;
	margin-right:20rpx;
}
.position_right{
	width:30%;
	text-align:right;
}
.page-body image{
	width:100%;
	height:400rpx;
}
.swiperOne image{
	width:100%;
	height:100%;
}
swiper{
	height:400rpx;
}
.swiper{
	position:relative;
}
.swiper-block{
  height: 400rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:330rpx;
  width: 520rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;  
}
.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}
.main{
	width:100%;
}
.dots{ 
  position: absolute; 
  left:0;
  bottom: 50rpx; 
  display: flex; 
  justify-content: center; 
  width:100%;
} 
.dots .dot{ 
  margin: 0 12rpx; 
  width: 18rpx; 
  height: 18rpx; 
  background: #999; 
  border-radius: 8rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  width: 34rpx; 
  background:#7cc4c2;
}
.menu{
	width:100%;
	flex-wrap:wrap;
	padding-top:10rpx;
	padding-bottom:42rpx;
}
.menu_item{
	width:25%;
	text-align:center;
	height:160rpx;
}
.menu_img{
	width:100rpx;
	height:100rpx;
	line-height:126rpx;
	border:solid 4rpx #7cc4c2;
	border-radius:50%;
	margin:0 auto 18rpx auto;
	overflow:hidden;
}
.menu_item image{
	width:52rpx;
	height:52rpx;
}
.search{
	width:94.8%;
	height:66rpx;
	background:#fff;
	border-radius:50rpx;
	position:relative;
	top:-32rpx;
	left:2.6%;
	box-shadow:0 0 40rpx #f0e8e1;
}
.search_btn{
	width:12%;
	text-align: center;
}
.search_btn image{
	width:36rpx;
	height:36rpx;
}
.search input{
	width:85%;
	height:100%;
	padding-left:3%;
	color:#666;
}
.title{
	width:100%;
	height:154rpx;
}
.title_cont{
	width:100%;
	height:100rpx;
}
.title_img{
	text-align:center;
}
.title_img image{
	width:162rpx;
	height:58rpx;
	margin:0 auto;
}
.title_word{
	text-align:center;
}
.moment{
	height:406rpx;
	position:relative;
}
.moment_cont{
	height:380rpx;
	overflow:hidden;
	border-radius:10rpx;
}
.moment_cont image{
	width:100%;
	height:300rpx;
}
.moment_bottom{
	position:absolute;
	right:0;
	bottom:0;
}
.moment_bottom image{
	width:144rpx;
	height:132rpx;
}
/*************横向滚动*****************/
.recommend_scroll_x_box {
  height:294rpx;
  padding: 40rpx 0;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.recommend_hot_box:first-child {
  margin-left: 24rpx;
}

.recommend_hot_box {
  width: 282rpx;
  height:294rpx;
  margin-right:36rpx;
  display: inline-block;
  overflow:hidden;
  border-radius:10rpx;
}
.recommend_hot_box image{
	width:282rpx;
	height:210rpx;
}
.recommend_tilte{
	padding-left:6%;
	width:94%;
	line-height:72rpx;
}
/************列表**************/
.product{
	height:300rpx;
}
.product_box{
	width:100%;
	height:240rpx;

}
.product_detail{
	width:100%;
	height:240rpx;
}
.product_left{
	width:62%;
	height:240rpx;
}
.product_left image{
	width:400rpx;
	height:240rpx;
}
.product_right{
	width:38%;
	height:240rpx;
}
.product_tilt{
	width:100%;
	height:72rpx;
	line-height:72rpx;
}
.show_list{
	border-bottom:solid 1px #e9e9e9;
}
.product_cont{
	width:100%;
	height:88rpx;
	line-height:30rpx;
}
.mommentTwo{
	width:100%;
	height:500rpx;
	position:relative;
}
.momentTwo_item{
	width:33.33%;
	height:100%;
}
.momentTwo_item:nth-child(2n){
	border-left:solid 1px #909090;
	border-right:solid 1px #909090;
}
.momentTwo_item image{
	width:100%;
	height:100%;
}
.mask{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.2);
	line-height:500rpx;
	text-align:center;
	font-size:40rpx;
}
.swiper_tlt{
	width:120%;
	height:4%;
	text-align:center;
}
.swiper-block{
	height:460rpx;
	margin-top:60rpx;
}
.swiper-box{
	width:80%;
}
.swiper_tlt image{
	width:22rpx;
	height:22rpx;
	margin:0 10rpx;
}
