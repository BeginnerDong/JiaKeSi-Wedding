/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.invitationSecondOne{
	width:100%;
	height:100vh;
	position:relative;
	overflow:hidden;
}
.invitationSecondOne image{
	width:100%;
	height:100%;
}
.invitationSecondOne{
	width:100%;
	position:absolute;
	left:0;
	top:0;
}
.invitationSecondOne_top{
	width:100%;
	height:162rpx;
	line-height:162rpx;
}
.invitationSecondOne_top image{
	width:170rpx;
	height:56rpx;
}
.invitationSecondOne_left{
	width:25%;
}
.invitationSecondOne_right{
	width:75%;
	height:50%;
	border-bottom:solid 1px #fff;
}
.invitationSecondOne_img{
	width:100%;
	height:400rpx;
	overflow:hidden;
}
.invitationSecondOne_img image{
	width:100%;
	height:100%;
}
.circle1{
	width:16rpx;
	height:16rpx;
	border-radius:50%;
	background: #f3a558;
}
.circle2{
	width:26rpx;
	height:26rpx;
	border-radius:50%;
	border:solid 1px #f3a558;
	margin-top:20rpx;

}
.invitationSecondOne_center_line{
	width:85%;
	border-bottom:dashed 1px #e0e0e0;
	height:50rpx;
	float:left;
}
.invitationSecondOne_center_right{
	float:right;
	margin-top:30rpx;
}
.invitationSecondOne_b_left{
	width:52%;
	float:left;
}
.invitationSecondOne_b_right{
	width:48%;
	float:right;
}
.invitationSecondOne_b_left image{
	width:100%;
	height:469rpx;
}
.invitationSecondOne_bottom{
	clear:both;
	overflow: hidden
}
.invitationSecondOne_word{
	width:210rpx;
	height:222rpx;
	border:solid 1px #fff;
	padding:30rpx 30rpx;
	float:right;
	margin-top:62rpx;
}
.invitationSecondOne_word>view{
	line-height:36rpx;
}
.invitationSecondOne_b_img image{
	width:286rpx;
	height:134rpx;
	float:right;
	margin-top:40rpx;
}
.save{
	bottom:10%;
}
.barrage_user{
	width:310rpx;
	height:90rpx;
	border-radius:0 50rpx 50rpx 0;
	overflow:hidden;
}
.user_in{
	width:310rpx;
	height:90rpx;
	background:rgba(250,93,93,0.5);
}
.user_img{
	width:70rpx;
	height:70rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0 auto;
}
.user_left{
	width:26%;
}
.user_right{
	width:74%;
}
.barrage{
	position:fixed;
	left:0;
	bottom:0;
	height:360rpx;
}
.whish{
	width:280rpx;
	height:50rpx;
	border-radius:0 50rpx 50rpx 0;
	overflow:hidden;
	margin-top:20rpx;
}
.whish_in{
	padding:0 30rpx;
	height:50rpx;
	line-height:50rpx;
	background:rgba(250,93,93,0.5);
}
.search_left{
	width:67%;
	height:60rpx;
	background:rgba(80,0,0,0.4);
	border-radius:40rpx;
}
.search_right{
	width:33%;
}
.search_left input{
	width:94%;
	height:60rpx;
	line-height:60rpx;
	font-size:24rpx;
	color:#fff;
	padding:0 3%;
}
.placeholder{
	color:#fff;
}
.search_img{
	width:50%;
	text-align:right;
}
.search_img image{
	width:60rpx;
	height:60rpx;
}
.search{
	margin-top:30rpx;
}
.gift{
	height:486rpx;
	padding-top:54rpx;
	position:fixed;
	left:0;
	bottom:0;
}
.gift_cont{
	flex-wrap:wrap;
}
.gift_item{
	width:25%;
	height:176rpx;
	border-radius:10rpx;
	text-align: center;
	box-sizing:border-box;
	position:relative;
}
.border_box{
	border:solid 1px #f73939;
}
.gift_item image{
	width:70rpx;
	height:60rpx;
}
.gift_number{
	color:#f73939;
}
.send_gift{
	height:60rpx;
	position: absolute;
	left:0;
	width:100%;
	bottom:40rpx;
}
.send_gift_left{
	width:70%;
}
.send_gift_right{
	width:30%;
}
.submit_into{
	background:#f73939;
	width:160rpx;
	text-align: center;
	height:60rpx;
	line-height:60rpx;
	color:#fff;
	font-size:24rpx;
}
.gift_input{
	width:72%;
	height:386rpx;
	position:fixed;
	left:14%;
	top:30%;
	border-radius:16rpx;
}
.gift_tlt{
	width:100%;
	height:126rpx;
	line-height:126rpx;
	text-align:center;
	color:#490112;
	position:relative;
}
.close{
	width:50rpx;
	height:50rpx;
	position:absolute;
	right:30rpx;
	top:10rpx;
}
.close image{
	width:100%;
	height:100%;
}
.gift_input input{
	width:360rpx;
	height:60rpx;
	padding:0 20rpx;
	border:solid 1px #e0e0e0;
	border-radius:10rpx;
	font-size:26rpx;
	color:#666;
	margin:32rpx auto 40rpx auto;
}
.is_choose{
	width:48rpx;
	height:50rpx;
	position: absolute;
	right:0;
	bottom:0;
}
.is_choose image{
	width:100%;
	height:100%;
}
.mask{
	width:100%;
	height:100%;
	position: absolute;
	left:0;
	top:0;
	background:rgba(0,0,0,0.5);
}
.send_money{
	width:77%;
	height:926rpx;
	position:absolute;
	left:11.5%;
	top:6%;
}
.send_bg{
	width:100%;
	height:330rpx;
	overflow: hidden;
	margin:0;
}
.send_money_bg{
	width:100%;
	background:#df3121;
	padding-top:50rpx;
	position:relative;
	padding-bottom: 60rpx;
}
.send_bg image{
	width:100%;
	height:330rpx;
}
.send_money input{
	width:410rpx;
	height:82rpx;
	border-radius:40rpx;
	font-size:24rpx;
	color:#222;
	padding:0 26rpx;
	line-height:82rpx;
	background:#fff;
	margin:0 auto 48rpx auto;
}
.notice{
	height:140rpx;
	line-height:80rpx;
	text-align: center;
}
.close_bottom{
	width:50rpx;
	height:50rpx;
	margin:40rpx auto 0 auto;
}
.close_bottom image{
	width:100%;
	height:100%;
}