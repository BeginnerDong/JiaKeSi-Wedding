<view class="login">
    <image src="/images/img7.jpg"></image>
    <view class="w690 flex login_cont">
        <view class="login_box bg1">
            <view class="login_input">
                <view class="flex input_list">
                    <view class="input_before">
                        <image src="/images/acoount.png"></image>
                    </view>
                    <view class="list_input">
                        <input placeholder="请输入您的姓名"></input>
                    </view>
                </view>
                <view class="flex input_list">
                    <view class="input_before">
                        <image src="/images/phone1.png" style="width:38rpx;height:48rpx;"></image>
                    </view>
                    <view class="list_input">
                        <input placeholder="请输入电话号码"></input>
                    </view>
                </view>
                <view class="list_input flexRowBetween" style="width:100%;border-bottom: solid 1px #f0f0f0;">
                    <input placeholder="请输入验证码" style="width:60%"></input>
                    <button class="get_check">获取验证码</button>
                </view>
                <button class="submit_info" bindtap="intoPath" data-path="/pages/scan/scan">登录</button>
            </view>
        </view>
    </view>
</view>