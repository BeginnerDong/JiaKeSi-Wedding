/**index.wxss**/

@import "../../wxParse/wxParse.wxss";
.index_product{
	flex-wrap: wrap;
}
.recommend_left{
	width:47.5%;
	border-radius: 10rpx;
	border:solid 1px #f0f0f0;
	height:544rpx;
	margin-top:30rpx;
}
.recommend_left image{
	width:100%;
	height: 360rpx;
}
.product_name{
	height:56rpx;
	line-height: 56rpx;
	width:90%;
	padding:0 5%;
}
.recommend_top{
	width:100%;
	height:350rpx;
	overflow:hidden;
	margin-bottom:20rpx;
	position:relative;
}
.recommend_top image{
	width:100%;
	height:100%;
}
.brige{
	width:90%;
	height:50rpx;
	line-height:50rpx;
	padding:0 5%;
	background:rgba(0,0,0,0.2);
	position:absolute;
	left:0;
	bottom:0;
}