/**************悬浮菜单*******************/
.menus .menu {
  position: fixed;
  z-index: 100;
  bottom: 220rpx;
  right: 40rpx;
  opacity: 0;
  font-size:24rpx;

}
.menus .sort {
  opacity: 1;
  width:110rpx;
	height:110rpx;
	border-radius:50%;
	overflow:hidden;
	text-align:center;
	line-height:110rpx;
	font-size:36rpx;
	color:#fff;
	position: fixed;
  	z-index: 100;
  	bottom:20%;
	right:0;
}
.mask{
	width:100%;
	min-height: 100%;
	background: rgba(0,0,0,0.3);
	position: absolute;
	left: 0;
	top:0;
	z-index:99;
}

.menus image{
	width:44rpx;
	height:40rpx;
	margin:0 auto;
}
.delete{
	width:66%;
	height:240rpx;
	border-radius:16rpx;
	background:rgba(0,0,0,0.5);
	position:absolute;
	top:40%;
	left:17%;
	z-index:9999;
}
.detele_notice{
	width:100%;
	height: 150rpx;
	line-height:150rpx;
	color:#fff;
	text-align:center;
}
.detele_btn{
	width:100rpx;
	height:50rpx;
	border-radius:30rpx;
	background:rgba(255,255,255,0.8);
	text-align: center;
	line-height:50rpx;
	font-size:24rpx;
	margin:0 24rpx;
}
.delete_cont{
	position: relative;
	width:100%;
	height:100%;
}
.close{
	width:50rpx;
	height:50rpx;
	position:absolute;
	top:-25rpx;
	right:-24rpx;
}
.close image{
	width:100%;
	height:100%;
}