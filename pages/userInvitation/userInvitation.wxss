@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.invitation{
	margin:30rpx auto 0 auto;
	width:89%;
	height:86vh;
	position:relative;
	overflow:hidden;
}
.invitation image{
	width:100%;
	height:100%;
}
.marks{
    width:160rpx;
    height:160rpx;
    position: absolute;
    right:-80rpx;
    top:-80rpx;
    background:#7cc4c2;
    transform:rotate(45deg);
    text-align: center;
    line-height:260rpx;
    font-size:28rpx;
    color:#fff;
}
.invitation_cont{
    position:absolute;
    left:10%;
    top:12%;
    width:80%;
    height:790rpx;
    box-shadow: 0 0 20rpx #f6f6f6;
}
.invitation_tlt{
	font-size:50rpx;
	color:#fc4c74;
	text-align: center;
	height:120rpx;
	line-height:120rpx;
}
.invitation_img{
	width:204rpx;
	height:204rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0 auto;
	border:solid 4rpx #fc4c74;
}
.invitation_img image{
	width:100%;
	height:100%;

}
.invitation_word{
	text-align:center;
}
.invitation_word image{
	width:346rpx;
	height:112rpx;
	margin:36rpx auto;
}
.bride{
	width:400rpx;
	height:50rpx;
	line-height:50rpx;
	background:#fc4c74;
	margin:0 auto; 
}
.invitation_word1{
	height:110rpx;
	line-height:110rpx;
	text-align: center;color:#fc2558
}
.time{
    color:#551524;
    font-size:24rpx;
    text-align: center;
    margin-bottom: 10rpx;
}
.recommend_scroll_x_box {
  height:100%;
  white-space: nowrap;
  display: flex;
}
.recommend_hot_box {
  width: 100%;
  height:100%;
  display: inline-block;
  overflow:hidden;
}
swiper{
	height:100%;
}
.swiper{
	position:relative;
}
.swiper-block{
  height: 100%;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
