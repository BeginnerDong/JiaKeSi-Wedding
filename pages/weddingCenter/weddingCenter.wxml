        <view class="city_item font28 {{web_select ==0?'color':'color3'}}" data-id="0" bindtap="select_city">北京</view>
        <view class="city_item font28 {{web_select ==1?'color':'color3'}}"  data-id="1" bindtap="select_city">上海</view>
        <view class="city_item font28 {{web_select ==2?'color':'color3'}}"  data-id="2" bindtap="select_city">广州</view>
    </view>
    <view class="city_hide" bindtap="menu_hide">
