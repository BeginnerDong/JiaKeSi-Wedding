/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	background:#fff;
}
.search{
	width:100%;
	height:68rpx;
	border-bottom:solid 1px #f4f4f4;
}
.search_item{
	width:100%;
}

.search_item image{
	width:20rpx;
	height:12rpx;
	margin-left:20rpx;
}
/************列表**************/
.product{
	height:220rpx;
}
.product_box{
	width:100%;
	height:160rpx;

}
.product_detail{
	width:100%;
}
.product_left{
	width:40%;
	height:160rpx;
}
.product_left image{
	width:240rpx;
	height:160rpx;
}
.product_right{
	width:60%;
	height:160rpx;
}
.product_tilt{
	width:100%;
	margin-bottom:16rpx;
}
.product_tilt image{
	width:28rpx;
	height:28rpx;
	margin-right:20rpx;
}
.bottom_line{
	width:100%;
	height:4rpx;
	margin:0;
	position:relative;
	top:-30rpx;
}
.show_list{
	height:230rpx;
}
.city_item{
	width:24%;
	hegith:60rpx;
	border:solid 1px #e0e0e0;
	text-align:center;
	line-height:60rpx;
}
.city{
	flex-wrap:wrap;
	padding:40rpx 0;
}
#city{
	background: #fff;
	position: fixed;
	top:-100%;
	left:0;
	transition:all 0.3s;
	z-index:999;
	padding-bottom:30rpx;
	box-shadow:0 0 10rpx #7cc4c2;
}
.city_hide{
	width:100%;
	height:60rpx;
	line-height:60rpx;
	text-align:center;
}
.city_hide image{
	width:50rpx;
	height:50rpx;
	margin:0 auto;
}
.city .color{
	border:solid 1px #7cc4c2;
}